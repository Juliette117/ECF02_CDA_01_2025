@model IEnumerable<AgenceEvenementielle.Models.Evenement>

@{
    ViewData["Title"] = "Evénements";
}


<h1 class="display-4">Bienvenue sur le gestionnaire des événements Wow Event </h1>

<h2>Evenements à venir </h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lieu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horraire)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horraire)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.Nom }) |
                @Html.ActionLink("Supprimer", "Delete", new { IDataTokensMetadata = item.Nom })
            </td>
        </tr>
}
    </tbody>
</table>


<button>
    <a asp-action="Create">Creer un événement</a>
</button>
